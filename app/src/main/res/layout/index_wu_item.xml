<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/wuliu_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_type"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_pinpai_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_pp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_pinpai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_guige_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_guige"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_num"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_prize"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/shop_all_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_all"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/content_all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</HorizontalScrollView>