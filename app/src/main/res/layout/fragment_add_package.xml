<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/add_bg"
        android:orientation="vertical">

        <include layout="@layout/item_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:src="@drawable/home_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/add_package_two_way"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="@string/add_package_price"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_add_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_five"
                android:background="@drawable/btn_white"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/height_ten"
                android:paddingRight="@dimen/height_ten"
                android:paddingTop="3dp"
                android:text="@string/add_package_know"
                android:textColor="@color/main_red"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_ten"
        android:layout_marginRight="@dimen/height_ten"
        android:layout_marginTop="160dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty"
            android:background="@drawable/btn_grey_top"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_ten"
                android:text="@string/add_package_enter_fastgo"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty"
            android:layout_marginLeft="@dimen/height_ten"
            android:layout_marginRight="@dimen/height_ten"
            android:layout_marginTop="@dimen/height_twenty"
            android:background="@drawable/btn_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:text="@string/add_package_number"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size_13" />

                <EditText
                    android:id="@+id/edit_add_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:layout_marginRight="@dimen/height_fifty"
                    android:background="@android:color/transparent"
                    android:hint="@string/add_package_enter_number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/main_grey9"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_ten"
                android:src="@drawable/add_scanning" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty"
            android:layout_marginLeft="@dimen/height_ten"
            android:layout_marginRight="@dimen/height_ten"
            android:layout_marginTop="@dimen/height_ten"
            android:background="@drawable/btn_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:text="@string/add_package_shop"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:layout_marginRight="@dimen/height_fifty"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/add_address_choose"
                    android:textColor="@color/black"
                    android:textColorHint="@color/main_grey9"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_ten"
                android:src="@drawable/my_right" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty"
            android:layout_marginLeft="@dimen/height_ten"
            android:layout_marginRight="@dimen/height_ten"
            android:layout_marginTop="@dimen/height_ten"
            android:background="@drawable/btn_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:text="@string/add_package_content"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size_13" />

                <EditText
                    android:id="@+id/edit_add_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:layout_marginRight="@dimen/height_fifty"
                    android:background="@android:color/transparent"
                    android:hint="@string/add_package_enter_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/main_grey9"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_add_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty"
            android:layout_marginBottom="@dimen/height_twenty"
            android:layout_marginLeft="@dimen/height_ten"
            android:layout_marginRight="@dimen/height_ten"
            android:layout_marginTop="@dimen/height_twenty"
            android:background="@drawable/btn_red"
            android:text="@string/add_address_add"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</RelativeLayout>