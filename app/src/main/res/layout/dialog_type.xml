<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_login_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fourty"
        android:background="@color/white"
        android:text="@string/login_common"
        android:gravity="center"
        android:textColor="@color/main_black"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/text_login_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fourty"
        android:background="@color/white"
        android:text="@string/login_shop"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:textColor="@color/main_black"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/text_login_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fourty"
        android:layout_marginTop="@dimen/height_ten"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/login_cancel"
        android:textColor="@color/main_black"
        android:textSize="@dimen/text_size_13" />

</LinearLayout>