<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="@dimen/height_ten"
        android:background="@drawable/balance_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fifty"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/linear_integral_back"
                android:layout_width="@dimen/height_fifty"
                android:layout_height="@dimen/height_fifty"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/balance_back" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/integral_title"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_integral_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height_twenty"
                android:gravity="center"
                android:text="@string/balance_detail"
                android:textColor="@color/main_red"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_ten"
            android:src="@drawable/integral_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_ten"
            android:text="@string/integral_residue"
            android:textColor="@color/main_black"
            android:textSize="@dimen/text_size_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_five"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/height_ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_fourty"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/height_ten"
                android:paddingRight="@dimen/height_ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/integral_yellow"
                    android:gravity="center"
                    android:text="@string/integral_obtain"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:text="@string/integral_content"
                    android:textColor="@color/main_grey6"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_twenty"
                android:layout_marginTop="@dimen/height_twenty"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/height_ten"
                android:paddingRight="@dimen/height_ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/integral_blue"
                    android:gravity="center"
                    android:text="@string/integral_ues"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_ten"
                    android:text="@string/integral_content"
                    android:textColor="@color/main_grey6"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cricle_red"
            android:gravity="center"
            android:text="@string/integral_rule"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />


    </RelativeLayout>
</LinearLayout>