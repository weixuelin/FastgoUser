<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_twenty"
            android:background="@drawable/btn_green_side"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_five"
                android:padding="@dimen/height_ten">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_five"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_mail_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_num"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="525625452"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_ten"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_name"
                            android:textColor="@color/main_grey73"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="@color/main_grey73"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aasdasd  252s sda"
                            android:textColor="@color/main_grey73"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_ten"
                        android:text="已入库"
                        android:textColor="@color/main_grey9"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/height_five"
                        android:text="2017/11/25 11:30:56"
                        android:textColor="@color/main_grey9"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/height_ten"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_grey_side"
                        android:text="@string/order_editor"
                        android:textColor="@color/main_grey73"
                        android:textSize="@dimen/text_size_12" />

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/height_ten"
                        android:background="@drawable/btn_grey_side"
                        android:text="@string/order_return"
                        android:textColor="@color/main_grey73"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/height_ten"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_grey_side"
                        android:text="@string/order_track"
                        android:textColor="@color/main_grey73"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/height_ten"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_price"
                            android:textColor="@color/main_grey73"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55"
                            android:textColor="@color/main_grey73"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/ben_order_payment"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/height_five"
                        android:background="@drawable/btn_red"
                        android:text="@string/pay_payment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/order_tobe_putin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_ten"
            android:layout_marginTop="13dp"
            android:background="@color/white"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="FG5255524"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ten"
        android:background="@color/all_bg" />
</LinearLayout>