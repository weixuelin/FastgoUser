<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fifty"
        android:background="@drawable/red_top_bg">

        <LinearLayout
            android:id="@+id/linear_back"
            android:layout_width="@dimen/height_fifty"
            android:layout_height="@dimen/height_fifty"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/white_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_package_add"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/height_ten"
            android:background="@drawable/btn_transparent"
            android:gravity="center"
            android:text="@string/my_order"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/text_package_been"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/home_have_been_arrived"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_package"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fourty"
        android:background="@color/white" />

    <com.wt.fastgo_user.widgets.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/height_ten"
        android:layout_weight="1" />
</LinearLayout>