<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fifty"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linear_add_card_back"
            android:layout_width="@dimen/height_fifty"
            android:layout_height="@dimen/height_fifty"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/setting_back" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_card_title"
            android:textColor="@color/main_black"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_fourty"
        android:layout_marginLeft="@dimen/height_ten"
        android:gravity="center_vertical"
        android:text="@string/add_card_prompt"
        android:textColor="@color/main_grey6"
        android:textSize="@dimen/text_size_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_ten"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/height_ten"
        android:paddingRight="@dimen/height_ten">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_card_name"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_card_phone"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="@string/add_card_enter"
                    android:inputType="phone"
                    android:textColor="@color/main_black"
                    android:textColorHint="@color/main_grey9"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_card_code"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_13" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@color/transparent"
                android:hint="@string/add_card_enter_code"
                android:textColor="@color/main_black"
                android:textColorHint="@color/main_grey9"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_red_side"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/main_red"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_card_card"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_13" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@color/transparent"
                android:hint="@string/add_card_enter"
                android:textColor="@color/main_black"
                android:textColorHint="@color/main_grey9"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_fourty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/add_card_cvv2"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_13" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@color/transparent"
                android:hint="@string/add_card_enter"
                android:textColor="@color/main_black"
                android:textColorHint="@color/main_grey9"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fourty"
        android:layout_margin="@dimen/height_ten"
        android:background="@drawable/btn_red"
        android:text="@string/add_card_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>